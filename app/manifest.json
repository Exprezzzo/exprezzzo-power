{
  "name": "Exprezzzo AI Playground",
  "short_name": "Exprezzzo",
  "description": "Vegas-style AI playground with multi-model support, roundtable comparisons, and enterprise session management",
  "theme_color": "#FFD700",
  "background_color": "#1A1A1A",
  "display": "standalone",
  "orientation": "portrait-primary",
  "scope": "/",
  "start_url": "/playground?source=pwa",
  "id": "/playground",
  "categories": ["productivity", "utilities", "ai"],
  "lang": "en-US",
  "dir": "ltr",
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  
  "screenshots": [
    {
      "src": "/screenshots/desktop-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Exprezzzo AI Playground Desktop View"
    },
    {
      "src": "/screenshots/mobile-narrow.png",
      "sizes": "360x640",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Exprezzzo AI Playground Mobile View"
    }
  ],
  
  "shortcuts": [
    {
      "name": "New Chat",
      "short_name": "Chat",
      "description": "Start a new AI conversation",
      "url": "/playground?mode=chat&source=shortcut",
      "icons": [
        {
          "src": "/icons/shortcut-chat.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Roundtable Mode",
      "short_name": "Roundtable",
      "description": "Compare AI models side-by-side",
      "url": "/playground?mode=roundtable&source=shortcut",
      "icons": [
        {
          "src": "/icons/shortcut-roundtable.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Sessions",
      "short_name": "Sessions",
      "description": "Manage your conversation sessions",
      "url": "/sessions?source=shortcut",
      "icons": [
        {
          "src": "/icons/shortcut-sessions.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Projects",
      "short_name": "Projects",
      "description": "Access your AI projects",
      "url": "/projects?source=shortcut",
      "icons": [
        {
          "src": "/icons/shortcut-projects.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/playground/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": [
            "text/plain",
            "text/markdown",
            "application/json",
            "text/csv",
            "application/pdf",
            "image/jpeg",
            "image/png",
            "image/webp",
            ".txt",
            ".md",
            ".json",
            ".csv",
            ".pdf",
            ".jpg",
            ".jpeg",
            ".png",
            ".webp"
          ]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+exprezzzo",
      "url": "/playground/protocol?action=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/playground/files",
      "accept": {
        "text/plain": [".txt"],
        "text/markdown": [".md"],
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "handle_links": "preferred",
  
  "related_applications": [],
  
  "permissions": [
    "notifications",
    "persistent-storage",
    "background-sync"
  ],
  
  "capture_links": "existing-client-navigate"
}